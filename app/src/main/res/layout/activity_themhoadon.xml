<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    tools:context=".Activity.ThemHoaDonActivity">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:enabled="false"
            android:hint="Ngày"
            android:id="@+id/ngay"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Chọn"
            android:onClick="chonngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="TÌM SÁCH "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SearchView
                android:queryHint="Tìm sach"
                android:id="@+id/sachthat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <EditText
            android:inputType="number"
            android:id="@+id/soluong"
            android:hint="Số lượng"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:onClick="themvaogiohang"
        android:layout_marginTop="8dp"
        android:text="Thêm vào giỏ hàng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="Sách"
                android:layout_width="150dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="Số Lượng"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="#f00"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:id="@+id/tien"
                android:text="Tiền"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <TextView
        android:text="Thành tiền: "
        android:textColor="#0027FF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tvtongtien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="them"
        android:text="Thêm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>